<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="mautic.api.auth0.auth0.wrapper.class">Cinece\MauticApiAuth0Bundle\DependencyInjection\Auth0Wrapper\Wrapper</parameter>        
    </parameters>

    <services>
        <service id="aut0_http_client" class="GuzzleHttp\Client"></service>

        <service id="mautic_api_auth0.auth0.wrapper" class="%mautic.api.auth0.auth0.wrapper.class%">
            <argument>%mautic_api_auth0.configs%</argument>
            <argument type="service" id="aut0_http_client" />
        </service>
    </services>
</container>